<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnSignupWithFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:minWidth="200dp"
        android:text="TODO: Signup with Facebook" 
        android:onClick="onClickOnBtnSignupWithFacebook"/>

    <Button
        android:id="@+id/btnSignupWithTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:minWidth="200dp"
        android:text="TODO: Signup with Twitter"
        android:onClick="onClickOnBtnSignupWithTwitter"/>
    
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:text="daffycricket@yahoo.fr" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="PASSWORD"
        android:inputType="textPassword" 
        android:text="azerty" />

    <EditText
        android:id="@+id/edtPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="CONFIRM PASSWORD"
        android:inputType="textPassword" 
        android:text="azerty" />
    
    <CheckBox
        android:id="@+id/chkAcceptCG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="I accept the terms of use"
        android:checked="true" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" >

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="100dp"
            android:text="TODO: Signup"
        	android:onClick="onClickOnBtnSignup"/>

        <Button
            android:id="@+id/btnLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="100dp"
            android:text="TODO: Later"
        	android:onClick="onClickOnBtnLater"/>
    </LinearLayout>

</LinearLayout>
</ScrollView><!-- From: file:/C:/Devs/TarotDroid/tarotDroidUiLib/src/main/res/layout/activity_signup.xml -->